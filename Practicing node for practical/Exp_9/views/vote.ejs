<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vote Survey</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-center">
      <div class="card shadow-sm form-card">
        <div class="card-body">
          <h3 class="card-title mb-4 text-center"><%= survey.question %></h3>
          <form method="POST" action="/vote/<%= survey._id %>">
            <% survey.options.forEach(o => { %>
              <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="option" value="<%= o %>" required>
                <label class="form-check-label"><%= o %></label>
              </div>
            <% }) %>
            <div class="d-grid gap-2 mt-3">
              <button class="btn btn-gradient">Submit Vote</button>
              <a href="/" class="btn btn-outline-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
