<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Online Survey</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container py-4">
    <h2 class="mb-4 text-center">Online Survey Application</h2>
    <div class="text-center mb-4">
      <a href="/create" class="btn btn-primary btn-lg">Create New Survey</a>
    </div>

    <div class="row g-4">
      <% surveys.forEach(survey => { %>
        <div class="col-md-6">
          <div class="card survey-card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= survey.question %></h5>
              <div class="mb-2">
                <% survey.options.forEach(o => { %>
                  <div><strong><%= o %></strong> â€” <%= survey.responses.get(o) || 0 %> votes</div>
                <% }) %>
              </div>
              <a href="/vote/<%= survey._id %>" class="btn btn-success mt-2">Vote</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
