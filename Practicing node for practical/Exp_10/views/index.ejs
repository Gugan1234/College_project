<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container py-4">
    <h2 class="mb-4 text-center">My Blog</h2>
    <div class="text-center mb-4">
      <a href="/new" class="btn btn-primary btn-lg">Create New Post</a>
    </div>

    <div class="row g-4">
      <% posts.forEach(p => { %>
        <div class="col-md-6">
          <div class="card blog-card shadow-sm">
            <div class="card-body">
              <h4 class="card-title"><%= p.title %></h4>
              <p class="card-text"><%= p.content.substring(0, 120) %>...</p>
              <a href="/view/<%= p._id %>" class="btn btn-info btn-sm">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
