<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Used Products - Buy & Sell</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h2 class="text-center mb-4">Used Products - Buy & Sell</h2>
    <div class="mb-3">
      <a href="/add" class="btn btn-primary">Sell New Product</a>
    </div>

    <div class="row">
      <% if (products.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">No products yet. Add one!</div>
        </div>
      <% } %>

      <% products.forEach(p => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= p.image || '/uploads/placeholder.png' %>" class="card-img-top" style="height:200px;object-fit:cover" alt="product image">
            <div class="card-body">
              <h5 class="card-title"><%= p.name %></h5>
              <p class="card-text"><%= p.description %></p>
              <p class="card-text"><strong>Price:</strong> â‚¹<%= p.price %></p>
              <p><strong>Status:</strong> <%= p.sold ? '<span class=\"badge bg-secondary\">Sold</span>' : '<span class=\"badge bg-success\">Available</span>' %></p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <div>
                <% if (!p.sold) { %>
                  <a href="/buy/<%= p._id %>" class="btn btn-sm btn-success">Buy</a>
                <% } %>
                <a href="/edit/<%= p._id %>" class="btn btn-sm btn-warning">Edit</a>
              </div>
              <a href="/delete/<%= p._id %>" class="btn btn-sm btn-danger">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
